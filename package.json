{
  "name": "signer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rainbow-me/rainbowkit": "^0.11.0",
    "boring-avatars": "^1.7.0",
    "ethers": "^5.7.2",
    "firebase": "^9.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-qr-code": "^2.0.11",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.6",
    "use-debounce": "^9.0.3",
    "wagmi": "^0.11.6"
  },
  "scripts": {
    "start": "BROWSER=none DISABLE_ESLINT_PLUGIN=true react-scripts start | grep -i compiled",
    "start:functions": "cd functions && npm run serve &> /dev/null",
    "build": "DISABLE_ESLINT_PLUGIN=true react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cypress": "NODE_ENV=development $(npm bin)/cypress open --e2e --browser chrome",
    "test:ci": "NODE_ENV=production CI=true server-test 'npm start' 3000 \"$(npm bin)/cypress run --browser chrome --config 60000\"",
    "test:ci:with_emulator": "NODE_ENV=production server-test 'start' 3000 'start:functions' 4000 'bash scripts/cy_parallel.sh'",
    "test:ci:parallel": "NODE_ENV=production server-test 'start' '1234|3000' 'start:functions' 4000 'bash scripts/cy_parallel.sh'",
    "test:ci:with_scy": "NODE_ENV=production server-test 'npm start' 3000 'bash scripts/cy_parallel.sh'",
    "test:scy": "CYPRESS_API_URL='http://localhost:1234' cy2 run -c numTestsKeptInMemory=0 --parallel --record --key irrelevant --ci-build-id `date +%s` --browser chrome",
    "scy:director": "docker stop sorry_cypress; docker rm sorry_cypress; docker run --name sorry_cypress -d -p 1234:1234 agoldis/sorry-cypress-director; docker ps",
    "prepare": "husky install",
    "lint": "eslint --fix src",
    "upgrade:browserlist": "npx browserslist@latest --update-db",
    "upgrade": "npm run upgrade:browserlist && ncu && npm outdated"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "import/no-anonymous-default-export": 0
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@depay/web3-mock": "^13.22.17",
    "@poap/skunk-linter": "^0.0.2",
    "cy2": "^4.0.6",
    "cypress": "^12.6.0",
    "cypress-fail-fast": "^7.0.0",
    "eslint": "^8.34.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "start-server-and-test": "^1.15.4"
  }
}